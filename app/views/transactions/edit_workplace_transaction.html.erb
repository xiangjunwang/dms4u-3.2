<div class="panel panel-default">
	<!-- Default panel contents -->
	<h2>Edit workplace transaction</h2>
	<!-- Form to manage workplace transaction -->
	<%= form_for :transaction, :url => {:action => 'update_workplace_transaction', :id => @transaction.id}, :html => {:class => 'new_account', :role => 'form'} do |f| %>
		<%= render :partial => 'wp_transaction_form', :locals => {:f => f, :transaction => @transaction} %>
		<%= f.submit "Update Workplace Transaction", :class => "form-control" %>
	<% end %>
</div>