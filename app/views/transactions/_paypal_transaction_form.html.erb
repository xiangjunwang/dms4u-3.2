<%= f.select :paypal_id, @paypals.insert(0, "Select a paypal account..."), {}, {:class => 'form-control'} %>
<%= f.number_field :amount, :placeholder => 'Amount', :class => 'form-control', :step => 0.5, :min => 0 %>
<%= f.text_field :sender_name, :placeholder => 'Sender Name', :class => 'form-control' %>
<%= f.text_field :sender_email, :placeholder => 'Sender\' email address', :class => 'form-control' %>
<%= f.text_field :transaction_date, :placeholder => 'Paid date', 'data-behaviour' => 'datepicker', :class => 'form-control' %>