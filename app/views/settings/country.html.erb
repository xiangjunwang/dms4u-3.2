<div class='row'>
	<%= render(:partial => 'header') %>
		<h2>Countries</h2>
		<div class='col-sm-2 col-sm-offset-10'>
			<%= link_to "New Country", :action => 'new_country', :html => {:class => 'form-control'} %>
		</div>
		<table class="table">
			<tr class='header'>
				<th>&nbsp;</th>
				<th>Country</th>
				<th>Accounts</th>
				<th>Actions</th>
			</tr>
			<% @countries.each do |country| %>
			<tr class="<%= cycle('odd', 'even') %>">
				<td><%= country.id %></td>
				<td><%= country.name %></td>
				<td><%= country.accounts.size %></td>
				<td class='actions'>
					<%= link_to('Edit', {:action => 'edit_country', :id => country.id}, :class => 'form-control') %>
					<%= link_to('Delete', {:action => 'delete_country', :id => country.id}, :class => 'form-control') %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>