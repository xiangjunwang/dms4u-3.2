<div class='row'>
	<%= render(:partial => 'header') %>
		<h2>Edit Workplace</h2>
		<div class='col-sm-2 col-sm-offset-10'>
			<%= link_to "Back to Workplace list", :action => 'workplace', :html => {:class => 'form-control'} %>
		</div>
		<br />
		<%= form_for :workplace, :url => {:action => 'update_workplace', :id => @workplace.id}, :html => {:class => 'edit_workplace', :role => 'form'}, :method => 'post' do |f| %>
			<%= f.text_field :name, :placeholder => 'Workplace Name', :class => 'form-control' %>
			<%= f.submit "Update workplace", :class => "form-control" %>
		<% end %> 
	</div>
</div>