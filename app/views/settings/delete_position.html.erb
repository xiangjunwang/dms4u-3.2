<div class='row'>
	<%= render(:partial => 'header') %>
		<h2>Delete Position</h2>
		<div class='col-sm-2 col-sm-offset-10'>
			<%= link_to "Back to Position list", :action => 'position', :html => {:class => 'form-control'} %>
		</div>
		<br />
		<%= form_for :position, :url => {:action => 'destroy_position', :id => @position.id}, :html => {:class => 'delete_position', :role => 'form'}, :method => 'post' do |f| %>
			<h4 class='reference-name'>Position name : <%= @position.name %></h4>
			<p class='form-control'>Are you sure you want to permanently delete this position?</p>
			<%= f.submit "Delete Position", :class => "form-control" %>
		<% end %> 
	</div>
</div>