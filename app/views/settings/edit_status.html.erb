<div class='row'>
	<%= render(:partial => 'header') %>
		<h2>Edit Status</h2>
		<div class='col-sm-2 col-sm-offset-10'>
			<%= link_to "Back to Status list", :action => 'status', :html => {:class => 'form-control'} %>
		</div>
		<br />
		<%= form_for :status, :url => {:action => 'update_status', :id => @status.id}, :html => {:class => 'new_status', :role => 'form'}, :method => 'post' do |f| %>
			<%= f.text_field :name, :placeholder => 'Status name', :class => 'form-control' %>
			<%= f.submit "Update Status", :class => "form-control" %>
		<% end %> 
	</div>
</div>