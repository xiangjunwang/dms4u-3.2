<div class='row'>
	<%= render(:partial => 'header') %>
		<h2>Delete Paypal</h2>
		<div class='col-sm-2 col-sm-offset-10'>
			<%= link_to "Back to Paypal list", :action => 'paypal', :html => {:class => 'form-control'} %>
		</div>
		<br />
		<%= form_for :paypal, :url => {:action => 'update_paypal', :id => @paypal.id}, :html => {:class => 'delete_paypal', :role => 'form'} do |f| %>
			<h4 class='reference-name'>Paypal name : <%= @paypal.name %></h4>
			<p class='form-control'>Are you sure you want to permanently delete this paypal?</p>
			<%= f.submit "Delete Paypal", :class => "form-control" %>
		<% end %>
	</div>
</div>