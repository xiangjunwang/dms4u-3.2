<div class='row'>
	<%= render(:partial => 'header') %>
		<h2>Edit Position</h2>
		<div class='col-sm-2 col-sm-offset-10'>
			<%= link_to "Back to Position list", :action => 'position', :html => {:class => 'form-control'} %>
		</div>
		<br />
		<%= form_for @position, :as => :position, :url => {:action => 'update_position', :id => @position.id}, :html => {:class => 'edit_position', :role => 'form'}, :method => 'post' do |f| %>
			<%= f.text_field :name, :placeholder => 'Position name', :class => 'form-control' %>
			<%= f.submit "Update Position", :class => "form-control" %>
		<% end %> 
	</div>
</div>