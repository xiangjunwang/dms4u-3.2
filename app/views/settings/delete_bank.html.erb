<div class='row'>
	<%= render(:partial => 'header') %>
		<h2>Delete Bank</h2>
		<div class='col-sm-2 col-sm-offset-10'>
			<%= link_to "Back to Bank list", :action => 'bank', :html => {:class => 'form-control'} %>
		</div>
		<br />
		<%= form_for :bank, :url => {:action => 'update_bank', :id => @bank.id}, :html => {:class => 'delete_bank', :role => 'form'} do |f| %>
			<h4 class='reference-name'>Bank Account Number : <%= @bank.account_no %></h4>
			<h4 class='reference-name'>Bank Swift Code : <%= @bank.swift_code %></h4>
			<h4 class='reference-name'>Bank Owner : <%= @bank.owner_name %></h4>
			<p class='form-control'>Are you sure you want to permanently delete this bank?</p>
			<%= f.submit "Delete Bank", :class => "form-control" %>
		<% end %>
	</div>
</div>