<div class='row'>
	<%= render(:partial => 'header') %>
		<h2>Create new Country</h2>
		<div class='col-sm-2 col-sm-offset-10'>
			<%= link_to "Back to Countries", :action => 'country', :html => {:class => 'form-control'} %>
		</div>
		<br />
		<%= form_for :country, :url => {:action => 'register_country'}, :html => {:class => 'new_country', :role => 'form'}, :method => 'post' do |f| %>
			<%= f.text_field :name, :placeholder => 'Country', :class => 'form-control', :id => 'country-field' %>
			<%= f.submit "Create Country", :class => "form-control" %>
		<% end %> 
	</div>
</div>