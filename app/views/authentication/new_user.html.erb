<%= form_for @user, :as => :user, :url => new_user_path, :html => {:class => 'new_user', :role => 'form'}, :method => :post do |f| %>
		<h2>Sign Up</h2>
		<%= f.text_field :name, :class => 'form-control', :placeholder => 'Name' %>
		<%= f.text_field :username, :class => 'form-control', :placeholder => 'Username' %>
		<%= show_field_error(@user, :username) %>
		<%= f.password_field :password, :class => 'form-control', :placeholder => 'password' %>
		<%= show_field_error(@user, :password) %>
		<%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Password Confirmation' %>
		<%= show_field_error(@user, :password_confirmation) %>
		<label class='checkbox'>
			Remember me<%= f.check_box :remember_me %>
		</label>
		<%= f.submit 'Sign Up', :class => 'btn btn-primary btn-block form-control' %>
<% end %>