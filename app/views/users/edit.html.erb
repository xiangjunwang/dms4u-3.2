<div class='container'>
	<%= link_to "Back to User list", :action => 'list' %>
	<%= form_for :user, :url => {:action => 'update', :id => @user.id}, :html => {:class => 'new_user', :role => 'form'} do |f| %>
	<%= render :partial => 'form', :locals => {:f => f, :user => @user} %>
		<%= f.submit "Update User", :class => "form-control" %>
	<% end %>
</div>